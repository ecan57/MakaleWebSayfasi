@*@using Makale.BusinessLayer*@
@using MakaleWebProjesi.Models
@using Makale.Entities
@{ 
    //KategoriYonet kategoriYonet = new KategoriYonet();
    //Kategori yönetler yerine cachehelper kullandık
    List<Kategori> liste = CacheHelper.KategoriCache();
  }

@* bunu index.htmlden aldık *@
<p class="lead">Kategoriler</p>
<div class="list-group">
    <a href="/Home/Index" class="list-group-item">
        <span class="glyphicon glyphicon-align-right"></span>
        Tümü
    </a>
    @foreach (Kategori kategori in liste)
    {
        <a href="/Home/Kategori/@kategori.Id" class="list-group-item" title="@kategori.Aciklama">
            <span class="glyphicon glyphicon-align-right"></span>
            @kategori.Baslik
        </a>
    }
</div>
