
@{
    ViewBag.Title = "Hata Sayfası";
    Exception ex = null;
    if (TempData["Error"] != null)
    {
        ex = TempData["Error"] as Exception;
    }
}


<div class="row text-center">
    <div class="col-md-8 col-md-offset-2">
        <h2>
            <span class="glyphicon glyphicon-remove-circle"></span>
            Hata oluştu!
        </h2>
        <p>
            Hata oluştu. Lütfen site yöneticisiyle iletişime geçin.
            <br />
            @if (ex != null)
            {
                <strong>Hata Detay:</strong>
                @ex.Message
                <br /><br />
            }
        </p>
        @Html.ActionLink("Anasayfaya git.", "Index", "Home", null, new { @class = "btn btn-defult" })
    </div>
</div>
